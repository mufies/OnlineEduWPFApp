<Page x:Class="OnlineEduTaskWPF.ManageStudentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Students">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ‘¨â€ðŸŽ“ Manage Students" FontSize="24" FontWeight="Bold"/>
            <Button Content="+ Add New Student" 
                   Background="#4CAF50" 
                   Foreground="White" 
                   Padding="15,8" 
                   Margin="0,10,0,0"
                   Click="AddStudent_Click"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>

        <!-- Students DataGrid -->
        <DataGrid Grid.Row="1" 
                 x:Name="dgStudents" 
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 IsReadOnly="True"
                 GridLinesVisibility="None"
                 HeadersVisibility="Column"
                 SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Student ID" Binding="{Binding StudentId}" Width="100"/>
                <DataGridTextColumn Header="Student Code" Binding="{Binding StudentCode}" Width="120"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Class ID" Binding="{Binding ClassId}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
