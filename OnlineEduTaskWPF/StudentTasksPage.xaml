<Page x:Class="OnlineEduTaskWPF.StudentTasksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="My Tasks">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                  Text="ðŸ“ My Tasks &amp; Assignments" 
                  FontSize="24" 
                  FontWeight="Bold" 
                  Margin="0,0,0,20"/>

        <!-- Filter Tabs -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="All Tasks" 
                   x:Name="btnAllTasks"
                   Background="#2196F3" 
                   Foreground="White" 
                   Padding="15,8" 
                   Margin="0,0,10,0"
                   BorderThickness="0"
                   Cursor="Hand"/>
            <Button Content="Pending" 
                   x:Name="btnPending"
                   Background="#E0E0E0" 
                   Foreground="#333" 
                   Padding="15,8" 
                   Margin="0,0,10,0"
                   BorderThickness="0"
                   Cursor="Hand"/>
            <Button Content="Submitted" 
                   x:Name="btnSubmitted"
                   Background="#E0E0E0" 
                   Foreground="#333" 
                   Padding="15,8" 
                   Margin="0,0,10,0"
                   BorderThickness="0"
                   Cursor="Hand"/>
            <Button Content="Graded" 
                   x:Name="btnGraded"
                   Background="#E0E0E0" 
                   Foreground="#333" 
                   Padding="15,8"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>

        <!-- Tasks List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="lstTasks"
                    BorderThickness="0"
                    Background="Transparent"
                    HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFFFFF" 
                               Padding="20" 
                               Margin="0,0,0,15" 
                               CornerRadius="8"
                               BorderBrush="#E0E0E0"
                               BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding TaskTitle}" 
                                                  FontSize="20" 
                                                  FontWeight="Bold"
                                                  Foreground="#333"/>
                                        <TextBlock Text="{Binding SubjectName}" 
                                                  FontSize="14" 
                                                  Foreground="#666"
                                                  Margin="0,5,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Column="1" 
                                           Background="{Binding StatusColor}"
                                           Padding="12,6"
                                           CornerRadius="4"
                                           VerticalAlignment="Top">
                                        <TextBlock Text="{Binding Status}" 
                                                  FontSize="12"
                                                  FontWeight="SemiBold"
                                                  Foreground="White"/>
                                    </Border>
                                </Grid>

                                <!-- Description -->
                                <TextBlock Grid.Row="1"
                                          Text="{Binding TaskDescription}" 
                                          FontSize="14" 
                                          Foreground="#666" 
                                          Margin="0,10,0,0"
                                          TextWrapping="Wrap"/>

                                <!-- Info Row -->
                                <Grid Grid.Row="2" Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                                        <TextBlock Text="ðŸ“… " FontSize="14"/>
                                        <TextBlock Text="Due: " FontSize="13" Foreground="#666"/>
                                        <TextBlock Text="{Binding DueDate, StringFormat=dd/MM/yyyy HH:mm}" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#F44336"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                        <TextBlock Text="ðŸŽ¯ " FontSize="14"/>
                                        <TextBlock Text="Max Score: " FontSize="13" Foreground="#666"/>
                                        <TextBlock Text="{Binding MaxScore}" 
                                                  FontSize="13" 
                                                  FontWeight="SemiBold"
                                                  Foreground="#4CAF50"/>
                                    </StackPanel>

                                    <!-- Score Display (if graded) -->
                                    <StackPanel Grid.Column="3" Orientation="Horizontal">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Score}" Value="{x:Null}">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>
                                        <TextBlock Text="â­ " FontSize="14"/>
                                        <TextBlock Text="Your Score: " FontSize="13" Foreground="#666"/>
                                        <TextBlock Text="{Binding Score}" 
                                                  FontSize="13" 
                                                  FontWeight="Bold"
                                                  Foreground="#FF9800"/>
                                        <TextBlock Text="/" FontSize="13" Foreground="#666" Margin="2,0"/>
                                        <TextBlock Text="{Binding MaxScore}" FontSize="13" Foreground="#666"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,15,0,0">
                                    <Button Content="{Binding ActionButtonText}"
                                           Click="SubmitTask_Click"
                                           Padding="20,10"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           BorderThickness="0"
                                           Cursor="Hand"
                                           Margin="0,0,10,0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CanSubmit}" Value="False">
                                                        <Setter Property="Background" Value="#2196F3"/>
                                                    </DataTrigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Button Content="View Details"
                                           Click="ViewDetails_Click"
                                           Background="#9E9E9E"
                                           Foreground="White"
                                           Padding="20,10"
                                           FontSize="14"
                                           BorderThickness="0"
                                           Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#9E9E9E"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#757575"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </Grid>
</Page>
