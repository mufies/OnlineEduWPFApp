<Window x:Class="OnlineEduTaskWPF.GradeSubmissionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grade Submission" 
        Height="700" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="White"
        ResizeMode="CanResize">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Grade Student Submission" 
                      FontSize="24" 
                      FontWeight="Bold"
                      Foreground="#333"/>
            <TextBlock x:Name="txtTaskTitle" 
                      FontSize="16" 
                      Foreground="#666"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Student Info -->
        <Border Grid.Row="1"
               Background="#E3F2FD"
               BorderBrush="#2196F3"
               BorderThickness="1"
               Padding="15"
               CornerRadius="6"
               Margin="0,0,0,20">
            <TextBlock x:Name="txtStudentName" 
                      FontSize="15"
                      Foreground="#1976D2"
                      FontWeight="SemiBold"/>
        </Border>

        <!-- Error Message -->
        <TextBlock x:Name="txtError" 
                  Grid.Row="2"
                  Foreground="Red" 
                  FontWeight="SemiBold"
                  TextWrapping="Wrap"
                  Margin="0,0,0,10"
                  Visibility="Collapsed"/>

        <!-- Submission Content -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Student's Submission:" 
                      FontWeight="SemiBold" 
                      FontSize="14"
                      Margin="0,0,0,10"/>
            <Border BorderBrush="#CCCCCC"
                   BorderThickness="1"
                   CornerRadius="4"
                   Background="#FAFAFA"
                   Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="250">
                    <TextBlock x:Name="txtSubmissionContent" 
                              TextWrapping="Wrap"
                              FontSize="13"
                              Foreground="#333"/>
                </ScrollViewer>
            </Border>
        </StackPanel>

        <!-- Grading Section -->
        <Grid Grid.Row="4" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Score -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="Score *" 
                          FontWeight="SemiBold" 
                          FontSize="14"
                          Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="0"
                            x:Name="txtScore"
                            Padding="10"
                            FontSize="14"
                            BorderBrush="#CCCCCC"
                            BorderThickness="1"/>
                    <TextBlock Grid.Column="1"
                              Text=" / " 
                              FontSize="16"
                              FontWeight="Bold"
                              VerticalAlignment="Center"
                              Margin="10,0"/>
                    <TextBlock Grid.Column="2"
                              x:Name="txtMaxScore"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="#4CAF50"
                              VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>

            <!-- Feedback -->
            <StackPanel Grid.Row="1">
                <TextBlock Text="Feedback for Student:" 
                          FontWeight="SemiBold" 
                          FontSize="14"
                          Margin="0,0,0,8"/>
                <Border BorderBrush="#CCCCCC"
                       BorderThickness="1"
                       CornerRadius="4">
                    <TextBox x:Name="txtFeedback"
                            Padding="12"
                            FontSize="13"
                            Height="120"
                            TextWrapping="Wrap"
                            AcceptsReturn="True"
                            VerticalScrollBarVisibility="Auto"
                            BorderThickness="0"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right">
            <Button Content="Save Grade"
                   x:Name="btnSave"
                   Click="btnSave_Click"
                   Background="#4CAF50"
                   Foreground="White"
                   Padding="30,12"
                   FontSize="15"
                   FontWeight="SemiBold"
                   BorderThickness="0"
                   Cursor="Hand"
                   Margin="0,0,10,0">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45a049"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <Button Content="Cancel"
                   Click="btnCancel_Click"
                   Background="#9E9E9E"
                   Foreground="White"
                   Padding="30,12"
                   FontSize="15"
                   BorderThickness="0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#9E9E9E"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#757575"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
