<Page x:Class="OnlineEduTaskWPF.ManageClassesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Classes">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ« Manage Classes" FontSize="24" FontWeight="Bold"/>
            <Button Content="+ Add New Class" 
                   Background="#FF9800" 
                   Foreground="White" 
                   Padding="15,8" 
                   Margin="0,10,0,0"
                   Click="AddClass_Click"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                 x:Name="dgClasses" 
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 IsReadOnly="True"
                 GridLinesVisibility="None"
                 HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Class ID" Binding="{Binding ClassId}" Width="100"/>
                <DataGridTextColumn Header="Class Code" Binding="{Binding ClassCode}" Width="120"/>
                <DataGridTextColumn Header="Class Name" Binding="{Binding ClassName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
