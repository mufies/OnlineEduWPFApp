<Window x:Class="OnlineEduTaskWPF.AddTeacherDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Teacher" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="30">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="âž• Add New Teacher" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Foreground="#2196F3"
                          Margin="0,0,0,25"/>

                <!-- Teacher ID -->
                <TextBlock Text="Teacher ID *" FontWeight="SemiBold" Margin="0,10,0,5" FontSize="14"/>
                <TextBox x:Name="txtTeacherId" 
                        Padding="12" 
                        FontSize="15"
                        BorderBrush="#BDBDBD"
                        BorderThickness="1"/>

                <!-- Username -->
                <TextBlock Text="Username *" FontWeight="SemiBold" Margin="0,15,0,5" FontSize="14"/>
                <TextBox x:Name="txtUsername" 
                        Padding="12" 
                        FontSize="15"
                        BorderBrush="#BDBDBD"
                        BorderThickness="1"/>

                <!-- Password -->
                <TextBlock Text="Password *" FontWeight="SemiBold" Margin="0,15,0,5" FontSize="14"/>
                <PasswordBox x:Name="txtPassword" 
                            Padding="12" 
                            FontSize="15"
                            BorderBrush="#BDBDBD"
                            BorderThickness="1"/>

                <!-- Error Message -->
                <TextBlock x:Name="txtError" 
                          Foreground="Red" 
                          Margin="0,15,0,0"
                          TextWrapping="Wrap"
                          FontSize="13"
                          Visibility="Collapsed"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right" 
                           Margin="0,40,0,0">
                    <Button Content="Cancel" 
                           Width="120" 
                           Height="40"
                           Margin="0,0,15,0"
                           Background="#E0E0E0"
                           FontSize="15"
                           Click="btnCancel_Click"
                           BorderThickness="0"
                           Cursor="Hand"/>
                    <Button Content="Add Teacher" 
                           Width="140" 
                           Height="40"
                           Background="#2196F3"
                           Foreground="White"
                           FontSize="15"
                           Click="btnAdd_Click"
                           BorderThickness="0"
                           Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
