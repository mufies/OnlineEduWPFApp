<Window x:Class="OnlineEduTaskWPF.AddClassDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Class" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="âž• Add New Class" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#FF9800"
                      Margin="0,0,0,25"/>

            <!-- Class Code -->
            <TextBlock Text="Class Code *" FontWeight="SemiBold" Margin="0,10,0,5" FontSize="14"/>
            <TextBox x:Name="txtClassCode" 
                    Padding="12" 
                    FontSize="15"
                    BorderBrush="#BDBDBD"
                    BorderThickness="1"/>

            <!-- Class Name -->
            <TextBlock Text="Class Name *" FontWeight="SemiBold" Margin="0,15,0,5" FontSize="14"/>
            <TextBox x:Name="txtClassName" 
                    Padding="12" 
                    FontSize="15"
                    BorderBrush="#BDBDBD"
                    BorderThickness="1"/>

            <!-- Error Message -->
            <TextBlock x:Name="txtError" 
                      Foreground="Red" 
                      Margin="0,15,0,0"
                      TextWrapping="Wrap"
                      FontSize="13"
                      Visibility="Collapsed"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,40,0,0">
                <Button Content="Cancel" 
                       Width="120" 
                       Height="40"
                       Margin="0,0,15,0"
                       Background="#E0E0E0"
                       FontSize="15"
                       Click="btnCancel_Click"
                       BorderThickness="0"
                       Cursor="Hand"/>
                <Button Content="Add Class" 
                       Width="140" 
                       Height="40"
                       Background="#FF9800"
                       Foreground="White"
                       FontSize="15"
                       Click="btnAdd_Click"
                       BorderThickness="0"
                       Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
