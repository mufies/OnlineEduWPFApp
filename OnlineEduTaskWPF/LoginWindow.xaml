<Window x:Class="OnlineEduTaskWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Online Edu Task - Login" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- TextBox Style - SIMPLIFIED -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- PasswordBox Style - SIMPLIFIED -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸŽ“ Online Edu Task" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Education System" 
                          FontSize="12" 
                          Foreground="#E3F2FD"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <Border Grid.Row="1" 
                Background="White" 
                Margin="30,30,30,30" 
                Padding="30"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect Color="Gray" 
                                Direction="270" 
                                ShadowDepth="2" 
                                Opacity="0.3" 
                                BlurRadius="10"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Sign In" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Foreground="#333333"
                          Margin="0,0,0,30"
                          HorizontalAlignment="Center"/>

                <!-- Username -->
                <TextBlock Text="Username" 
                          FontSize="13" 
                          Foreground="#666666"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" 
                        Style="{StaticResource ModernTextBox}"
                        Height="40"
                        Margin="0,0,0,20"/>

                <!-- Password -->
                <TextBlock Text="Password" 
                          FontSize="13" 
                          Foreground="#666666"
                          Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                            Style="{StaticResource ModernPasswordBox}"
                            Height="40"
                            Margin="0,0,0,10"/>

                <!-- Error Message -->
                <TextBlock x:Name="txtError" 
                          Foreground="Red" 
                          FontSize="12"
                          TextWrapping="Wrap"
                          Margin="0,0,0,20"
                          Visibility="Collapsed"/>

                <!-- Login Button -->
                <Button Content="Login" 
                       Style="{StaticResource ModernButton}"
                       Height="45"
                       Click="btnLogin_Click"
                       Margin="0,10,0,0"/>

                <!-- Info Text -->
                <TextBlock Text="Default credentials:" 
                          FontSize="11" 
                          Foreground="#999999"
                          Margin="0,20,0,5"
                          HorizontalAlignment="Center"/>
                <TextBlock FontSize="10" 
                          Foreground="#999999"
                          HorizontalAlignment="Center">
                    <Run Text="Admin: admin/123456"/>
                    <LineBreak/>
                    <Run Text="Teacher: teacher1/123456"/>
                    <LineBreak/>
                    <Run Text="Student: student1/123456"/>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
