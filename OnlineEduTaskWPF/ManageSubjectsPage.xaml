<Page x:Class="OnlineEduTaskWPF.ManageSubjectsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Subjects">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“š Manage Subjects" FontSize="24" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="+ Add New Subject" 
                       Background="#9C27B0" 
                       Foreground="White" 
                       Padding="15,8" 
                       Margin="0,0,10,0"
                       Click="AddSubject_Click"
                       BorderThickness="0"
                       Cursor="Hand"/>
                <Button Content="ðŸ“‹ Assign Subject to Class" 
                       Background="#673AB7" 
                       Foreground="White" 
                       Padding="15,8"
                       Click="AssignSubject_Click"
                       BorderThickness="0"
                       Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                 x:Name="dgSubjects" 
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 IsReadOnly="True"
                 GridLinesVisibility="None"
                 HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Subject ID" Binding="{Binding SubjectId}" Width="100"/>
                <DataGridTextColumn Header="Subject Code" Binding="{Binding SubjectCode}" Width="120"/>
                <DataGridTextColumn Header="Subject Name" Binding="{Binding SubjectName}" Width="*"/>
                <DataGridTextColumn Header="Credits" Binding="{Binding Credits}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
