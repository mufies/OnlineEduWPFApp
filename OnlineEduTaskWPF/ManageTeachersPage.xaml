<Page x:Class="OnlineEduTaskWPF.ManageTeachersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Manage Teachers">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ‘¨â€ðŸ« Manage Teachers" FontSize="24" FontWeight="Bold"/>
            <Button Content="+ Add New Teacher" 
                   Background="#2196F3" 
                   Foreground="White" 
                   Padding="15,8" 
                   Margin="0,10,0,0"
                   Click="AddTeacher_Click"
                   BorderThickness="0"
                   Cursor="Hand"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                 x:Name="dgTeachers" 
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 IsReadOnly="True"
                 GridLinesVisibility="None"
                 HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="User Account ID" Binding="{Binding UserAccountId}" Width="120"/>
                <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                <DataGridTextColumn Header="Teacher ID" Binding="{Binding TeacherId}" Width="100"/>
                <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
