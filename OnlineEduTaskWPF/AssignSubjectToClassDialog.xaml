<Window x:Class="OnlineEduTaskWPF.AssignSubjectToClassDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Subject to Class" 
        Height="580" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Grid Margin="30">
        <StackPanel>
            <TextBlock Text="ðŸ“š Assign Subject to Class" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#673AB7"
                      Margin="0,0,0,25"/>

            <!-- Select Class -->
            <TextBlock Text="Select Class *" FontWeight="SemiBold" Margin="0,10,0,5" FontSize="14"/>
            <ComboBox x:Name="cmbClass" 
                     Padding="12" 
                     FontSize="15"
                     DisplayMemberPath="ClassName"
                     SelectedValuePath="ClassId"
                     BorderBrush="#BDBDBD"
                     BorderThickness="1"/>

            <!-- Select Subject -->
            <TextBlock Text="Select Subject *" FontWeight="SemiBold" Margin="0,20,0,5" FontSize="14"/>
            <ComboBox x:Name="cmbSubject" 
                     Padding="12" 
                     FontSize="15"
                     DisplayMemberPath="SubjectName"
                     SelectedValuePath="SubjectId"
                     BorderBrush="#BDBDBD"
                     BorderThickness="1"/>

            <!-- Select Teacher (Optional) -->
            <TextBlock Text="Select Teacher (Optional)" FontWeight="SemiBold" Margin="0,20,0,5" FontSize="14"/>
            <ComboBox x:Name="cmbTeacher" 
                     Padding="12" 
                     FontSize="15"
                     DisplayMemberPath="Username"
                     SelectedValuePath="TeacherId"
                     BorderBrush="#BDBDBD"
                     BorderThickness="1"/>
            <TextBlock Text="Note: TeacherId will be stored for reference" 
                      FontSize="12" 
                      Foreground="#999" 
                      Margin="0,5,0,0"/>

            <!-- Error Message -->
            <TextBlock x:Name="txtError" 
                      Foreground="Red" 
                      Margin="0,15,0,0"
                      TextWrapping="Wrap"
                      FontSize="13"
                      Visibility="Collapsed"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,35,0,0">
                <Button Content="Cancel" 
                       Width="120" 
                       Height="40"
                       Margin="0,0,15,0"
                       Background="#E0E0E0"
                       FontSize="15"
                       Click="btnCancel_Click"
                       BorderThickness="0"
                       Cursor="Hand"/>
                <Button Content="Assign" 
                       Width="140" 
                       Height="40"
                       Background="#673AB7"
                       Foreground="White"
                       FontSize="15"
                       Click="btnAssign_Click"
                       BorderThickness="0"
                       Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
